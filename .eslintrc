{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "jquery": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "_czc": true,
    "System": true
  },
  "extends": "airbnb",
  "plugins": ["html"],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "build/webpack.base.conf.js"
      }
    }
  },
  "rules": {
    "import/extensions": [
      2,
      "always",
      {
        "js": "never"
      }
    ],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-tabs": "off",
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "after-used"
      }
    ],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "semi": [2, "always"],
    "no-console": 0,
    "prefer-const": 0,
    "prefer-template": 0,
    "no-param-reassign": 0,
    "comma-dangle": [1, "never"],
    "spaced-comment": [0, "always"],
    "space-before-function-paren": [2, "never"],
    "func-names": 0,
    "no-underscore-dangle": 0,
    "import/prefer-default-export": 1,
    "class-methods-use-this": 0,
    "no-prototype-builtins": 0,
    "import/no-extraneous-dependencies": 0,
    "radix": 0,
    "no-new": 1,
    "new-cap": 1,
    "eol-last": "off",
    "linebreak-style": "off",
    "max-len": [
      2,
      150,
      {
        "ignoreComments": true,
        "ignoreUrls": true
      }
    ],
    "no-mixed-operators": [
      1,
      {
        "allowSamePrecedence": true
      }
    ],
    "arrow-parens": [1, "as-needed", { "requireForBlockBody": true }],
    "prefer-destructuring": 0,
    "wrap-iife": [2, "inside", { "functionPrototypeMethods": true }],
    "no-debugger": 0
  }
}
